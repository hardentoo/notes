SELECT
    A.COMPANYNAME,
    O.SHIPTO_CONTACTNAME,
    O.SHIPTO_STREET,
    P.PROVINCENAME,
    O.SHIPTO_CONTACTPHONE,
    A.FAXNO,
    A.EMAIL,
    A.WEBURL,
    MAX(O.ORDERDATE) AS MRO
FROM
    ORDER         AS O
LEFT JOIN ACCOUNT AS A
ON
    A.ACCOUNTID = O.ACCOUNTID
LEFT JOIN PROVINCE AS P
ON
    P.PROVINCEID = O.SHIPTO_PROVINCEID
GROUP BY
    O.SHIPTO_CONTACTNAME,
    O.SHIPTO_CONTACTPHONE
ORDER BY
    MRO DESC