SELECT
    A.COMPANYNAME,
    O.SHIPTO_CONTACTNAME,
    O.SHIPTO_STREET,
    P.PROVINCENAME,
    O.SHIPTO_CONTACTPHONE,
    A.FAXNO,
    A.EMAIL,
    A.WEBURL,
    MAX(O.ORDERDATE)
FROM
    ORDER O
INNER JOIN ACCOUNT A
ON
    A.ACCOUNTID = O.ACCOUNTID
LEFT JOIN PROVINCE P
ON
    P.PROVINCEID = O.SHIPTO_PROVINCEID
GROUP BY
    A.COMPANYNAME,
    O.SHIPTO_CONTACTNAME,
    O.SHIPTO_STREET,
    P.PROVINCENAME,
    O.SHIPTO_CONTACTPHONE,
    A.FAXNO,
    A.EMAIL,
    A.WEBURL,
    O.ORDERDATE
ORDER BY
    O.ORDERDATE DESC